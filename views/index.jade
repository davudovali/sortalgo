include ./head.jade
form#sort
  input#number(type="number", min="15", max="100",step="1", value="10")
  select#speed
    option( value="60") fast
    option( value="300") middle
    option( value="700") slow
  input(type="submit")
  div.checksort
    input.check(type="checkbox", name="Stupid", value="stupid", checked)
    div Stupid
  div.checksort
    input.check(type="checkbox", name="Bubble", value="bubble", checked)
    div Bubble
  div.checksort
    input.check(type="checkbox", name="Coctail", value="coctail", checked)
    div Coctail
  div.checksort
    input.check(type="checkbox", name="Odd-even", value="odd-even", checked)
    div Odd-even
div#starting
  button#reset 
  button#start 
div#stupidcont(class="conteiner")
  div Stupid sort
    p#stupidcounter(class="counter") 0
  div#stupid(class="row")
div#bubblecont(class="conteiner")
  div Bubble sort
    p#bubblecounter(class="counter") 0
  div#bubble(class="row")
div#coctailcont(class="conteiner")
  div Coctail sort
    p#coctailcounter(class="counter") 0
  div#coctail(class="row")
div#odd-evencont(class="conteiner")
  div Odd-even sort
    p#odd-evencounter(class="counter") 0
  div#odd-even(class="row")
script(src="./async.js")
script(src="./main.js")
